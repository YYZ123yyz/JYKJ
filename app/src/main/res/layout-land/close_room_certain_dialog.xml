<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_round_ffffff_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="提示"
            android:textSize="@dimen/sp_10"/>

        <TextView
            android:id="@+id/tv_remind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="观众正在赶来的路上哦"
            android:textSize="13sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@+id/tv_remind"
            android:gravity="center"
            android:text="确认关闭直播吗"
            android:textSize="@dimen/sp_8"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/bt_cancel"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/groabColor"
                android:textSize="@dimen/sp_8"/>

            <TextView
                android:id="@+id/bt_certain"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_toRightOf="@+id/bt_cancel"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/groabColor"
                android:textSize="@dimen/sp_8"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
