<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/color_4d666666">
        <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:id="@+id/iv_gb"
                android:background="@mipmap/close_pic"
                android:layout_marginLeft="@dimen/dp_161"/>
    <LinearLayout android:layout_width="@dimen/dp_160" android:layout_height="match_parent"
                  android:background="@mipmap/share_bg" android:layout_below="@+id/iv_gb" android:id="@+id/share_con_layout"
                  android:orientation="vertical" android:layout_alignParentLeft="true" android:layout_marginRight="10dp" android:layout_marginLeft="0dp">
        <TextView android:layout_width="match_parent" android:layout_height="@dimen/dp_15"
                  android:text="邀请卡" android:textStyle="bold" android:gravity="center" android:textSize="6sp"  android:textColor="@color/blackColor"></TextView>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <www.jykj.com.jykj_zxyl.util.CircleImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_userhead"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/doctor_head" android:layout_centerHorizontal="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="@dimen/dp_11"
                      android:id="@+id/tv_username" android:text="齐研" android:textSize="@dimen/sp_6"  android:layout_below="@+id/iv_userhead" android:layout_centerHorizontal="true" android:textColor="@color/blackColor"></TextView>
            <TextView android:layout_width="wrap_content" android:layout_height="@dimen/dp_11"
                      android:id="@+id/tv_advise_title" android:text="邀请您一起看直播" android:textSize="@dimen/sp_6" android:layout_below="@+id/tv_username" android:layout_centerHorizontal="true" android:textColor="@color/blackColor"></TextView>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                      android:textSize="@dimen/sp_6" android:textStyle="bold" android:text="某某：高血压患者、亚健康人群得干预方法（适合高血压患者观看）"
            android:id="@+id/tv_live_room_title" android:layout_below="@+id/tv_advise_title" android:textColor="@color/blackColor"></TextView>
            <TextView android:layout_width="match_parent" android:layout_height="@dimen/dp_11" android:gravity="center"  android:textSize="@dimen/sp_6"
                      android:id="@+id/tv_live_room_time" android:text="直播时间：2020-09-08 10：00" android:layout_below="@+id/tv_live_room_title" android:textColor="@color/blackColor"></TextView>
            <TextView android:layout_width="match_parent" android:layout_height="@dimen/dp_11" android:gravity="center" android:textSize="@dimen/sp_6"
                      android:id="@+id/tv_live_room_speaker" android:text="主讲人：齐研" android:layout_below="@+id/tv_live_room_time" android:textColor="@color/blackColor"></TextView>
            <TextView android:layout_width="match_parent" android:layout_height="@dimen/dp_11" android:gravity="center" android:textSize="@dimen/sp_6"
                      android:id="@+id/tv_author_title" android:text="来自：西安鹫一卓越" android:layout_below="@+id/tv_live_room_speaker" android:textColor="@color/blackColor"></TextView>
            <ImageView android:layout_width="@dimen/dp_25" android:layout_height="@dimen/dp_25" android:id="@+id/iv_author_qrcode" android:src="@mipmap/jiuyi_crcode"
                       android:layout_below="@+id/tv_author_title" android:layout_centerHorizontal="true"></ImageView>
            <TextView android:layout_width="match_parent" android:layout_height="@dimen/dp_11" android:gravity="center" android:textSize="@dimen/sp_6"
                      android:id="@+id/tv_qrcode_desc" android:text="扫码查看此直播" android:layout_below="@+id/iv_author_qrcode" android:textColor="@color/blackColor"></TextView>
            <TextView android:layout_width="@dimen/dp_100" android:layout_height="@dimen/dp_25" android:id="@+id/tv_support_title" android:textColor="@color/blackColor"
            android:text="鹫一卓越提供技术支持" android:layout_below="@+id/tv_qrcode_desc" android:layout_centerHorizontal="true" android:textSize="@dimen/sp_6" android:drawableLeft="@mipmap/jiuyi_logo" android:gravity="center" android:layout_alignParentBottom="true">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_toRightOf="@+id/share_con_layout"
                  android:layout_marginBottom="@dimen/dp_7" android:layout_marginLeft="@dimen/dp_20"
                  android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
                  android:layout_marginTop="@dimen/dp_5" android:layout_marginStart="@dimen/dp_5"
                  android:layout_marginEnd="@dimen/dp_5" android:layout_marginRight="0dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="@dimen/dp_20" android:layout_height="@dimen/dp_20" android:layout_marginLeft="10dp"
                       android:id="@+id/save_pic_btn" android:src="@mipmap/save_pic">
            </ImageView>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_below="@+id/save_pic_btn"
                      android:id="@+id/save_pic_title" android:text="保存图片" android:textColor="@color/white"
                      android:textSize="@dimen/sp_6" android:layout_marginTop="@dimen/dp_5" android:layout_marginLeft="@dimen/dp_5"/>
            <ImageView android:layout_width="@dimen/dp_20" android:layout_height="@dimen/dp_20"
                       android:id="@+id/link_pic_btn"
                       android:src="@mipmap/link_pic" android:layout_toRightOf="@+id/save_pic_btn"
                       android:layout_marginLeft="@dimen/dp_30">
            </ImageView>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_below="@+id/link_pic_btn" android:layout_marginTop="@dimen/dp_5"
                      android:layout_marginLeft="@dimen/dp_27"
                      android:id="@+id/link_pic_title" android:text="复制链接" android:textColor="@color/white"
                      android:layout_toRightOf="@+id/save_pic_title" android:textSize="@dimen/sp_6"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5">
            <ImageView android:layout_width="@dimen/dp_20" android:layout_height="@dimen/dp_20" android:layout_marginLeft="@dimen/dp_10"
                       android:id="@+id/friend_pic_btn" android:src="@mipmap/friend_pic">
            </ImageView>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_below="@+id/friend_pic_btn" android:textSize="@dimen/sp_6" android:layout_marginLeft="@dimen/dp_5"
                      android:id="@+id/friend_pic_title" android:text="微信好友" android:textColor="@color/white"
                      android:layout_marginTop="@dimen/dp_5"/>
            <ImageView android:layout_width="@dimen/dp_20" android:layout_height="@dimen/dp_20"
                       android:id="@+id/webchat_pic_btn" android:src="@mipmap/webchat_pic"
                       android:layout_marginLeft="@dimen/dp_30"
                       android:layout_toRightOf="@+id/friend_pic_btn">
            </ImageView>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_below="@+id/webchat_pic_btn" android:layout_marginLeft="@dimen/dp_30"
                      android:textSize="@dimen/sp_6"
                      android:id="@+id/webchat_pic_title" android:text="朋友圈" android:layout_marginTop="@dimen/dp_5"
                      android:textColor="@color/white" android:layout_toRightOf="@+id/friend_pic_title"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
