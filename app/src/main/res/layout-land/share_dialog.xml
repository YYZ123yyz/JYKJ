<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_4d666666">

    <ImageView
        android:id="@+id/iv_gb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="201dp"
        android:background="@mipmap/close_pic" />

    <LinearLayout
        android:id="@+id/share_con_layout"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_gb"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/share_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="邀请卡"
            android:layout_marginTop="10dp"
            android:textColor="@color/blackColor"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <www.jykj.com.jykj_zxyl.util.CircleImageView
                android:id="@+id/iv_userhead"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/doctor_head" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_userhead"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="齐研"
                android:textColor="@color/blackColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_advise_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_username"
                android:layout_centerHorizontal="true"
                android:text="邀请您一起看直播"
                android:layout_marginTop="3dp"
                android:textColor="@color/blackColor"
                android:textSize="7sp"/>

            <TextView
                android:id="@+id/tv_live_room_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_advise_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="某某：高血压患者、亚健康人群得干预方法（适合高血压患者观看）"
                android:textColor="@color/blackColor"
                android:textSize="15sp"
               />

            <TextView
                android:id="@+id/tv_live_room_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_11"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_live_room_title"
                android:gravity="center"
                android:text="直播时间：2020-09-08 10：00"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/sp_6"/>

            <TextView
                android:id="@+id/tv_live_room_speaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_live_room_time"
                android:gravity="center"
                android:text="主讲人：齐研"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/sp_6"/>

            <TextView
                android:id="@+id/tv_author_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_11"
                android:layout_below="@+id/tv_live_room_speaker"
                android:gravity="center"
                android:text="来自：西安鹫一卓越"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/sp_6"/>

            <ImageView
                android:id="@+id/iv_author_qrcode"
                android:layout_width="29dp"
                android:layout_height="28dp"
                android:layout_below="@+id/tv_author_title"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_qrcode_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_author_qrcode"
                android:gravity="center"
                android:text="扫码查看此直播"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/sp_6"/>

            <TextView
                android:id="@+id/tv_support_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_qrcode_desc"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@mipmap/jiuyi_logo"
                android:gravity="center"
                android:text="鹫一卓越提供技术支持"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/sp_6"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="@dimen/dp_7"
        android:layout_toRightOf="@+id/share_con_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_save_root"
                >
                <ImageView
                    android:id="@+id/save_pic_btn"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/save_pic"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/save_pic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="保存图片"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/ll_save_root"
                >
                <ImageView
                    android:id="@+id/link_pic_btn"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/link_pic"/>

                <TextView
                    android:id="@+id/link_pic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="复制链接"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_friend_root"
                >

                <ImageView
                    android:id="@+id/friend_pic_btn"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/friend_pic"/>

                <TextView
                    android:id="@+id/friend_pic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="微信好友"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/ll_friend_root"
                >
                <ImageView
                    android:id="@+id/webchat_pic_btn"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/webchat_pic"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/webchat_pic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="朋友圈"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
