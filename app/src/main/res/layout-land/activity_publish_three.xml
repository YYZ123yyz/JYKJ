             android:visibility="gone"/>-->
    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_25">
        <www.jykj.com.jykj_zxyl.util.CircleImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@mipmap/docter_heard"
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_live_user_head"
                android:layout_marginLeft="@dimen/dp_2"
                android:textSize="@dimen/sp_10"
                android:layout_alignParentLeft="true"
                android:textColor="@color/groabColor"/>
        <TextView android:layout_width="wrap_content" android:layout_height="@dimen/dp_20" android:maxLength="30" android:id="@+id/tv_head_tit"
                  android:layout_toRightOf="@+id/iv_live_user_head" android:gravity="center_vertical" android:textSize="@dimen/sp_8">

        </TextView>
        <android.support.v7.widget.RecyclerView
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_20"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/tv_head_tit"
                android:id="@+id/chat_head_imgs" android:visibility="gone"/>
        <TextView android:layout_width="@dimen/dp_20" android:layout_height="@dimen/dp_20" android:layout_alignParentRight="true"
                  android:background="@drawable/live_tv" android:id="@+id/tv_chat_num" android:layout_marginRight="@dimen/dp_2" android:text="0人" android:gravity="center" android:visibility="gone"></TextView>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_20" android:layout_marginTop="@dimen/dp_30" android:visibility="gone">
        <ztextviewlib.MarqueeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:id="@+id/mv_chat_content"
                android:text="" />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/video_releative_layout"
            android:layout_gravity="right|top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25" android:layout_marginRight="@dimen/dp_5" android:layout_marginTop="@dimen/dp_5">
        <LinearLayout
                android:id="@+id/btns_video"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_alignParentBottom="true">
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/btnMessage"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@mipmap/message"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/btnOriention"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@mipmap/camerarienthg"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/btnShare"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@mipmap/share_tran"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/btnShut"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@mipmap/shut_video"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/chat_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_45"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <com.hyphenate.easeui.widget.EaseTitleBar
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                hyphenate:titleBarLeftImage="@drawable/ease_mm_title_back" />

        <LinearLayout
                android:id="@+id/layout_alert_kicked_off"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:layout_below="@id/title_bar"
                android:background="@drawable/ease_alert_click_bg"
                android:gravity="center_vertical"
                android:visibility="gone">

            <TextView
                    android:id="@+id/tv_error_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_2"
                    android:textSize="@dimen/sp_8"
                    android:text="@string/alert_kicked_for_offline"
                    android:textColor="#000" />

        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/input_menu"
                android:layout_below="@id/layout_alert_kicked_off">

            <com.hyphenate.easeui.widget.EaseChatMessageList
                    android:id="@+id/message_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            <com.hyphenate.easeui.widget.EaseVoiceRecorderView
                    android:id="@+id/voice_recorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="invisible" />
        </RelativeLayout>

        <com.hyphenate.easeui.widget.EaseChatInputMenu
                android:id="@+id/input_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

    </RelativeLayout>
    <TextView
            android:id="@+id/netbusy_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingBottom="@dimen/dp_2"
            android:paddingTop="@dimen/dp_2"
            android:background="@color/colorRed"
            android:gravity="center"
            android:textSize="@dimen/sp_8"
            android:textColor="#ffffff"
            android:text="当前网络质量很糟糕，建议您拉近离路由器的距离，避免WiFi穿墙！"/>
</FrameLayout>
