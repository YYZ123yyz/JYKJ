<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pBackColor"
    tools:context=".activity.myself.MyAccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/groabColor"
        >
        <LinearLayout
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/arrow_left"/>
        </LinearLayout>
        <TextView
            android:text="个人资料"
            android:textSize="10pt"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:textColor="@color/writeColor"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="提交"
            android:textSize="10pt"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:id="@+id/tv_activityUserCenter_commit"
            android:layout_marginRight="10dp"
            android:layout_width="60dp"
            android:textColor="@color/writeColor"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/writeColor"
                android:id="@+id/li_activityUserCenter_userHeadLayout"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <www.jykj.com.jykj_zxyl.util.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/docter_heard"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_activityUserCenter_userImage"
                    android:layout_marginRight="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/groabColor"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/fragmentmyself_jt_r"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请填写姓名（必填）"
                    android:background="@null"
                    android:id="@+id/tv_activityUserCenter_userNameText"
                    android:textColorHint="@color/editHintColor"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/fragmentmyself_jt_r"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:id="@+id/li_activityUserCenter_userSexLayout"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请选择性别（必选）"
                    android:gravity="right"
                    android:background="@null"
                    android:id="@+id/tv_activityUserCenter_userSexText"
                    android:textColorHint="@color/editHintColor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/fragmentmyself_jt_r"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:id="@+id/li_activityUserCenter_userBirthLayout"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生日期"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请选择出生日期（必选）"
                    android:id="@+id/tv_activityUserCenter_userBirthDayText"
                    android:gravity="right"
                    android:background="@null"
                    android:textColorHint="@color/editHintColor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/fragmentmyself_jt_r"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:id="@+id/li_activityUserCenter_userRegionLayout"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="区域"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请选择区域（必选）"
                    android:id="@+id/tv_activityUserCenter_userRegionText"
                    android:gravity="right"
                    android:background="@null"
                    android:textColorHint="@color/editHintColor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/fragmentmyself_jt_r"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:id="@+id/li_activityUserCenter_choiceHospitalLayout"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医院"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>

                <TextView
                    android:id="@+id/tv_activityUserCenter_choiceHospitalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请选择医院（必选）"
                    android:textColor="@color/textColor_vo"
                    android:textColorHint="@color/editHintColor"
                    android:textSize="8pt" />
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/fragmentmyself_jt_r"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:id="@+id/li_activityUserCenter_choiceDepartmentLayout"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科室"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请选择一级科室（必选）"
                    android:gravity="right"
                    android:background="@null"
                    android:id="@+id/tv_activityUserCenter_choiceDepartmentText"
                    android:textColorHint="@color/editHintColor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/fragmentmyself_jt_r"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:id="@+id/li_activityUserCenter_choiceDepartmentSecondLayout"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二级科室"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请选择二级科室（必选）"
                    android:background="@null"
                    android:id="@+id/tv_activityUserCenter_choiceDepartmentSecondText"
                    android:textColorHint="@color/editHintColor"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/fragmentmyself_jt_r"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职称"

                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请选择职称（必选）"
                    android:gravity="right"
                    android:background="@null"
                    android:id="@+id/tv_activityUserCenter_userTitleEdit"
                    android:textColorHint="@color/editHintColor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/fragmentmyself_jt_r"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通讯地址"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"

                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <EditText
                    android:singleLine="true"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:hint="请填写通讯地址"
                    android:id="@+id/et_activityUserCenter_addressEdit"
                    android:background="@null"
                    android:gravity="right"
                    android:textColorHint="@color/editHintColor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/fragmentmyself_jt_r"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电子邮箱"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请填写电子邮箱"
                    android:gravity="right"
                    android:background="@null"
                    android:id="@+id/et_activityUserCenter_emalEdit"
                    android:textColorHint="@color/editHintColor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/fragmentmyself_jt_r"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人简介"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="请完善个人简介，增加患者信任度（必填）"
                    android:id="@+id/et_activityUserCenter_synopsisEdit"
                    android:layout_marginLeft="15dp"
                    android:background="@color/pBackColor"
                    android:textColorHint="@color/editHintColor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="15dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长领域"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="请填写擅长领域"
                    android:id="@+id/et_activityUserCenter_goodAtRealmEdit"
                    android:layout_marginLeft="15dp"
                    android:background="@color/pBackColor"
                    android:textColorHint="@color/editHintColor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="15dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>