<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_80000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="取消"
                android:padding="10dp"
                android:textColor="@color/color_999999"
                android:textSize="15sp">


            </TextView>

            <TextView
                android:id="@+id/tv_ensure_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:text="确定"
                android:textColor="@color/color_00CD05">


            </TextView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee">

        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择开始时间"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="15sp">


            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择结束时间"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="15sp">


            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.allin.refreshandload.loadmore.RecyclerViewFinal
                android:id="@+id/rv_start_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >


            </com.allin.refreshandload.loadmore.RecyclerViewFinal>

            <com.allin.refreshandload.loadmore.RecyclerViewFinal
                android:id="@+id/rv_end_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >


            </com.allin.refreshandload.loadmore.RecyclerViewFinal>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>