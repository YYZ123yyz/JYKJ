<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_15"
    >

    <TextView
        android:id="@+id/serial_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16sp"
        android:textColor="@color/color_999999"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:id="@+id/second_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="syuyu"
            android:textSize="15sp"
            android:textColor="@color/color_000000"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_play_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.8wan"
                android:textSize="12sp"
                android:textColor="@color/color_999999"
                android:drawableLeft="@mipmap/iv_play_num"
                android:drawablePadding="8dp"

                />

            <TextView
                android:id="@+id/tv_play_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.8wan"
                android:textSize="12sp"
                android:textColor="@color/color_999999"
                android:drawableLeft="@mipmap/iv_play_time"
                android:layout_toRightOf="@+id/tv_play_num"
                android:layout_marginLeft="30dp"
                android:drawablePadding="8dp"
                />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:text="3434"
                android:textColor="@color/color_ffffff"
                android:background="@drawable/bg_round_e6302c"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
