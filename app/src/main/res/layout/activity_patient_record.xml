                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="科室"
                                android:textColor="@color/encode_view"
                                android:textSize="12sp" />

