                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@null"
                            android:hint="请输入内容"
                            android:textColorHint="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>


                </LinearLayout>


                <View style="@style/div_h" />

                <!--查体情况-->
                <LinearLayout

