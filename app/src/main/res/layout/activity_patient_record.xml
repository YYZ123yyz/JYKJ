                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <!--检查检验-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:id="@+id/ll_inspection_root"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:drawablePadding="10dp"
                            android:text="检查检验"
                            android:textColor="@color/black"
                            android:textSize="15sp" />


                        <ImageView
                            android:id="@+id/input_check_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/iv_filled"
                            android:visibility="visible" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/bg_right_arrow" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View style="@style/div_h" />

                        <com.zhy.view.flowlayout.TagFlowLayout
                            android:id="@+id/flowlayout_check"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            zhy:max_select="-1" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_prescription_notes_root"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:text="处方笺"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/dispaly_fullpayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/bg_right_arrow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View style="@style/div_h" />

                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/flowlayout_prescr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:visibility="gone"
                        zhy:max_select="-1" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/drug_recycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_fullpayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="#fff"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/share"
                    android:layout_width="232dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_paid"
                    android:text="保存"
                    android:textColor="#fff" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/lin_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/middle"
            android:background="@drawable/bg_paid"
            android:text="发送"
            android:textColor="@color/white" />

        <View
            android:id="@+id/middle"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/middle"
            android:background="@drawable/bg_paid"
            android:text="保存"
            android:textColor="@color/white" />


    </RelativeLayout>
</RelativeLayout>