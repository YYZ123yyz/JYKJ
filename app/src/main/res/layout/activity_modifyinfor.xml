<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/item_toolbar" />

    <TextView
        android:id="@+id/set_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="设置支付密码"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:text="请设置支付密码，用于支付验证"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <www.jykj.com.jykj_zxyl.capitalpool.weiget.PasswordEditText
        android:id="@+id/password_et"
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:inputType="number"
        app:maxCount="6"
        app:strokeColor="@color/color_333333" />

    <LinearLayout
        android:id="@+id/operating_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:gravity="bottom"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/forget_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="忘记密码"
            android:textColor="@color/color_999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/modify_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="修改密码"
            android:textColor="@color/color_999999"
            android:textSize="15sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/bind_tv"
        android:layout_width="@dimen/dp_230"
        android:layout_height="@dimen/dp_35"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_round_7a9eff_15"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:visibility="gone" />
</LinearLayout>