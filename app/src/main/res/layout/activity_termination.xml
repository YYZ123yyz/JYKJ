<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yyz_exploit.activity.activity.TerminationActivity">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/groabColor">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/arrow_left" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="解约"
            android:textColor="@color/writeColor"
            android:textSize="10pt" />

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/rl"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#ffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_Detect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="解约原因"
                    android:textColor="@color/tabColor_nomal" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:layout_gravity="center_vertical"
                    android:text="请选择" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/fragmentmyself_jt_r" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background=" #F0F0F0 " />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="17dp"
                android:textColor="@color/tabColor_nomal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="解约描述" />

            <EditText
                android:id="@+id/ed_termination"
                android:layout_width="fill_parent"
                android:layout_height="143dp"
                android:layout_marginTop="16.5dp"
                android:layout_marginStart="23.5dp"
                android:layout_marginEnd="23.5dp"
                android:layout_marginBottom="20.5dp"
                android:background="@drawable/bg_round_f6f6f6_8"
                android:gravity="top"
                android:padding="10dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
       android:layout_marginBottom="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@mipmap/bg_2"
        android:text="提交"
        android:textColor="@color/writeColor"
        android:textSize="8pt" />
</RelativeLayout>