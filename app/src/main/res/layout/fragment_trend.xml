<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/writeColor"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_blood_day_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日均"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/tabColor_nomal"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/view_blood_day_average"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@color/groabColor"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_blood_week_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周均"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="@color/tabColor_nomal"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/view_blood_week_average"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:orientation="horizontal"
                android:background="@color/groabColor"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_blood_month_average"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="月均"
                android:textColor="@color/tabColor_nomal"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/view_blood_month_average"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@color/groabColor"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

