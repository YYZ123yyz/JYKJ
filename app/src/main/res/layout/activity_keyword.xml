<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="yyz_exploit.activity.activity.KeywordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/groabColor">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/keyword_back"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/arrow_left" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="直播关键字"
            android:textSize="8pt"
            android:textColor="@color/writeColor" />
        <TextView
            android:layout_marginRight="15dp"
            android:textSize="8pt"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:id="@+id/keyword_save"
            android:text="保存"
            android:textColor="@color/writeColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
      <TextView
          android:layout_marginLeft="10dp"
          android:layout_marginTop="20dp"
          android:textColor="#000"
          android:text="请您选择直播的关键字，最多选择三项"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

    <yyz_exploit.Utils.FlowLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/keyword_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/customize"
        android:textColor="@color/color_666666"
        android:text="自定义"
        android:textSize="12sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_oval_eeeeee_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
