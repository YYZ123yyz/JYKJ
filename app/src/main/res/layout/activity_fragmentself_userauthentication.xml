<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <ScrollView
        android:background="@color/pBackColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/groabColor"
                >
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:id="@+id/li_activityAuthentication_back"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/arrow_left"/>
                </LinearLayout>
                <TextView
                    android:text="个人认证"
                    android:textSize="10pt"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:textColor="@color/writeColor"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/right_image_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:src="@mipmap/icon_add_small"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/writeColor"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请上传您的身份证正反面照片"
                    android:layout_marginLeft="10dp"
                    android:textSize="7pt"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:background="@color/writeColor"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/ri_idcardFront"
                    android:background="@color/pBackColor"
                   >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:id="@+id/iv_idcardFont"
                        android:src="@mipmap/idcard_front"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/photograph"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/pBackColor"
                    android:id="@+id/ri_idcardBack"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:id="@+id/iv_idcardBack"
                        android:src="@mipmap/idcard_verso"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/photograph"/>
                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="7pt"
                    android:layout_gravity="center"
                    android:text="正面照"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="7pt"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="反面照"
                    />

            </LinearLayout>
  <LinearLayout
      android:orientation="horizontal"
      android:background="#fff"
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="40dp">
      <TextView
          android:textColor="#000"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@color/writeColor"
          android:layout_gravity="center"
          android:text="请上传您的医师认证资料"
          android:gravity="center_vertical"
          android:textSize="15sp"
          android:paddingLeft="10dp"/>
      <TextView
          android:layout_gravity="center"
          android:textColor="#DD0000"
          android:text="(请保持证件号清晰可见)"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
  </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/writeColor"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/pBackColor"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:id="@+id/iv_zyz"
                        android:src="@mipmap/zyz"/>
                    <ImageView
                        android:id="@+id/iv_zyz_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/photograph"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/pBackColor"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:id="@+id/iv_zcz"
                        android:src="@mipmap/zcz"/>
                    <ImageView
                        android:id="@+id/iv_zcz_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/photograph"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dp_104"
                    android:layout_height="wrap_content"
                    android:background="@color/pBackColor"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:id="@+id/iv_zgz"
                        android:layout_centerInParent="true"
                        android:layout_width="70dp"
                        android:layout_height="95dp"
                        android:layout_margin="10dp"
                        android:src="@mipmap/gongzuo"/>
                    <ImageView
                        android:id="@+id/iv_zgz_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/photograph"/>
                </RelativeLayout>
               <!-- <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/pBackColor"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:id="@+id/iv_zgz"
                        android:src="@mipmap/zgz"/>
                    <ImageView
                        android:id="@+id/iv_zgz_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/photograph"/>
                </RelativeLayout>-->





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/writeColor"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="7pt"
                    android:layout_gravity="center"
                    android:text="1.医师执业证"
                    />

                <TextView
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="7pt"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="2.医师职称证"
                    />
                <TextView
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="7pt"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="3.医师工作证"
                    />

            </LinearLayout>

            <!--其他相关证书-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp10"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="223.5dp">
                <LinearLayout
                    android:layout_marginTop="@dimen/dp17"
                    android:layout_marginLeft="@dimen/dp14"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#333"
                        android:textSize="15sp"
                        android:text="请上传其他相关证件"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="13sp"
                        android:text="（最多不超过3张）"
                        android:textColor="#DD0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="60dp"
                android:background="@mipmap/bg2"
                android:id="@+id/bt_commit"
                android:textColor="@color/writeColor"
                android:textSize="10pt"
                android:text="确认提交"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>