<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_return_money"
        android:id="@+id/iv_money_sign"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"
        >


    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/tv_amount"
        android:layout_toEndOf="@+id/iv_money_sign"
        android:layout_marginEnd="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_bill_title"
            android:text="图文就诊 李医生大家圣诞快乐份健康史蒂夫家是江东父老开始的三"
            >


        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:layout_marginTop="7dp"
            android:text="医疗就这"
            android:textSize="13sp"
            android:id="@+id/tv_bill_content"
            >


        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="2020-05-14  18:00"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_date_time"

            >


        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f5f5f5"
            >


        </View>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_010101"
        android:textSize="15sp"
        android:id="@+id/tv_amount"
        android:text="-20"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        >


    </TextView>
</RelativeLayout>