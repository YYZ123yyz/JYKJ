<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/live_image"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="9dp"
            android:background="@drawable/live_tv"
            android:layout_gravity="center"
            android:text="视频直播"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="20dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_lecture_title"
            android:text="高血压患者"
            android:textColor=" #000000 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_lecture_content"
            android:text="营养学专家教你如何吃出健康血压"
            android:textColor="  #999999  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

           <LinearLayout

               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <TextView
                           android:textColor="  #999999  "
                           android:text="类目："
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:textColor="#999999"
                           android:id="@+id/item_lecture_class"
                           android:text="高血压预防"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <TextView
                           android:textColor="  #999999  "
                           android:text="浏览量："
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:layout_weight="1"
                           android:textColor="  #999999  "
                           android:id="@+id/item_lecture_number"
                           android:text="50"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                   </LinearLayout>

               </LinearLayout>
               <TextView
                   android:gravity="center"
                   android:textColor="#fff"
                   android:background="@drawable/shape_corner_button"
                   android:layout_gravity="center"
                   android:text="设置价格"
                   android:layout_width="70dp"
                   android:layout_height="30dp"/>
           </LinearLayout>

    </LinearLayout>

</LinearLayout>
