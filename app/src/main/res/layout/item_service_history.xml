<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <com.meg7.widget.CircleImageView
            android:id="@+id/iv_userhead"
            android:layout_width="67.5dp"
            android:layout_height="67.5dp"
            android:layout_centerVertical="true">

        </com.meg7.widget.CircleImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="17.5dp"
            android:layout_marginTop="14.5dp"
            android:layout_toEndOf="@+id/iv_userhead"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="李某某"
                    android:textColor="@color/color_010101"
                    android:textSize="15sp">


                </TextView>

                <RelativeLayout
                    android:id="@+id/rl_age_and_gendar_root"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/bg_round_2581ff_6">

                    <ImageView
                        android:id="@+id/iv_gender_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:src="@mipmap/bg_gender_icon">


                    </ImageView>

                    <TextView
                        android:id="@+id/tv_age_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@+id/iv_gender_icon"
                        android:text="32"
                        android:textColor="@color/white"
                        android:textSize="8.5sp">


                    </TextView>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="预约时间:"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp">


                </TextView>

                <TextView
                    android:id="@+id/tv_appointment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="2019-11-30 15:30"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp">


                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="预约项目:"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp">


                </TextView>

                <TextView
                    android:id="@+id/tv_appointment_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="图文就诊"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp">


                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="患者主诉:"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp">


                </TextView>

                <TextView
                    android:id="@+id/tv_patient_chief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="头痛"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp">


                </TextView>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_receive_sucess_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.5dp"
        android:layout_marginBottom="15.5dp"
        android:orientation="horizontal"

        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_consult_data_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_oval_7a9eff_14"
                android:paddingStart="10dp"
                android:paddingTop="7dp"
                android:paddingEnd="10dp"
                android:paddingBottom="7dp"
                android:text="问诊资料"
                android:textColor="@color/color_7A9EFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_comprehensive_surface_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_oval_7a9eff_14"
                android:paddingStart="18.5dp"
                android:paddingTop="7dp"
                android:paddingEnd="18.5dp"
                android:paddingBottom="7dp"
                android:text="综合表"
                android:textColor="@color/color_7A9EFF" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_medical_records_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_oval_7a9eff_14"
                android:paddingStart="10dp"
                android:paddingTop="7dp"
                android:paddingEnd="10dp"
                android:paddingBottom="7dp"
                android:text="查看病历"
                android:textColor="@color/color_7A9EFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_diagnosis_message_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_oval_7a9eff_14"
                android:paddingStart="10dp"
                android:paddingTop="7dp"
                android:paddingEnd="10dp"
                android:paddingBottom="7dp"
                android:text="诊后留言"
                android:textColor="@color/color_7A9EFF" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>