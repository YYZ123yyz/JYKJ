<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pBackColor"
    android:id="@+id/ll_root"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="135dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/subject_live_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/cover_demo" />

            <ImageView
                android:id="@+id/play_subject_live_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/playbtn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_round_4d666666_5"
                android:paddingStart="9dp"
                android:paddingTop="6dp"
                android:paddingEnd="9dp"
                android:paddingBottom="6dp"
                android:text="视频直播"
                android:textColor="@color/writeColor"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/subject_live_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blackColor"
                android:textSize="15sp"
                android:text="高血压患者、和健康人群的干预 方法" />

            <TextView
                android:id="@+id/subject_live_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_below="@+id/subject_live_title"
                android:text="营养学专家教你如何吃出健康血压"
                android:textColor="@color/textColor_vo" />

            <TextView
                android:id="@+id/subject_live_catalog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/subject_live_desc"
                android:text="类目：高血压预防"
                android:textColor="@color/color_999999" />

            <TextView
                android:id="@+id/subject_watch_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject_live_catalog"
                android:layout_alignParentLeft="true"
                android:text="观看人数：200"
                android:textSize="13sp"
                android:textColor="@color/color_999999" />

            <TextView
                android:id="@+id/subject_live_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject_live_catalog"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="￥40.00"
                android:textSize="12sp"
                android:textColor="@color/btn_red" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
