<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="yyz_exploit.activity.activity.CancellationDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/groabColor">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/li_back">
            <ImageView
                android:layout_width="10dp"
                android:layout_gravity="center_vertical"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/arrow_left" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="解约详情"
            android:textColor="@color/writeColor"
            android:textSize="10pt" />
    </RelativeLayout>
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_50">
           <TextView
               android:text="解约原因"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_weight="1"
               android:textColor="@color/tabColor_nomal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/tv_thereason"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
      </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background=" #F0F0F0 " />
         <TextView
             android:layout_marginLeft="@dimen/dp_10"
             android:textColor="@color/tabColor_nomal"
             android:text="解约描述"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/description"
             android:layout_marginLeft="@dimen/dp_10"
             android:textColor="@color/tabColor_nomal"
             android:text="解约描述"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
     </LinearLayout>
</LinearLayout>