<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="270dp"
        android:layout_height="377dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_round_ffffff_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="直播主题"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/back_beforese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:src="@mipmap/back_beforese" />

        </LinearLayout>

        <EditText
            android:id="@+id/ed_theme"
            android:layout_width="216dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:hint="请输入您的直播主题"
            android:paddingStart="3.5dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="直播关键字"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Keyword"
            android:layout_width="216dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:gravity="center_vertical"
            android:paddingStart="3.5dp"
            android:text="请选择您的直播关键字"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="直播封面"
            android:textColor="#000000"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="216dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lin_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@mipmap/lin_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:focusable="false"
                android:text="请上传您的直播封面" />

            <ImageView
                android:id="@+id/beforese_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/beforese_add" />
        </RelativeLayout>

        <TextView
            android:id="@+id/beforese_time_tit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="直播时间"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/beforese_time"
            android:layout_width="216dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:gravity="center_vertical"
            android:paddingStart="3.5dp"
            android:text="请设置您的直播时间"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <Button
            android:id="@+id/beforese_confirm"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#ffe0e0e0"
            android:text="确认"
            android:textColor="#666666" />
    </LinearLayout>

</LinearLayout>