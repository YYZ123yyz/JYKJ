<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lin"
        android:layout_centerHorizontal="true"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="270dp"
        android:layout_height="377dp">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="直播主题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:id="@+id/back_beforese"
                android:src="@mipmap/back_beforese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <EditText
            android:background="#E0E0E0"
            android:layout_gravity="center"
            android:hint="请输入您的直播主题"
            android:id="@+id/ed_theme"
            android:layout_width="216dp"
            android:layout_height="33dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"
            android:text="直播关键字"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/Keyword"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:text="请选择您的直播关键字"
            android:layout_width="216dp"
            android:layout_height="33dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"
            android:text="直播封面"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="216dp"
            android:layout_height="95dp">
            <ImageView
                android:id="@+id/lin_add"
                android:src="@mipmap/lin_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:scaleType="fitXY"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:text="请上传您的直播封面"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:id="@+id/beforese_add"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/beforese_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"
            android:text="直播时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/beforese_time"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:text="请设置您的直播时间"
            android:layout_width="216dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/beforese_confirm"
            android:layout_marginTop="10dp"
            android:text="确认"
            android:textColor="#666666"
            android:background="#ffe0e0e0"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="20dp"/>
    </LinearLayout>

</LinearLayout>