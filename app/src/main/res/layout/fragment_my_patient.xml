<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pBackColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/li_fragmentHZGL_qb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/writeColor"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_All"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:textColor="@color/tabColor_nomal"
                    android:textSize="9pt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_fragmentHZGL_qbCut"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/groabColor"
                android:orientation="horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_fragmentHZGL_yj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/writeColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="预警"
                android:textColor="@color/textColor_hztltabyj"
                android:textSize="9pt" />

            <LinearLayout
                android:id="@+id/li_fragmentHZGL_yjCut"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/groabColor"
                android:orientation="horizontal"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_fragmentHZGL_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/writeColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="提醒"
                android:textColor="@color/textColor_hzgltabtx"
                android:textSize="9pt" />

            <LinearLayout
                android:id="@+id/li_fragmentHZGL_txCut"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/groabColor"
                android:orientation="horizontal"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_fragmentHZGL_zc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/writeColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="正常"
                android:textColor="@color/textColor_hzgltabzc"
                android:textSize="9pt" />

            <LinearLayout
                android:id="@+id/li_fragmentHZGL_zcCut"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/groabColor"
                android:orientation="horizontal"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragmethzgl_hzinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp" />
</LinearLayout>