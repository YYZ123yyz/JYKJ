<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.myself.coupon.activity.CouponActivity">
    <include
        layout="@layout/item_toolbar"/>
    <LinearLayout
        android:background="#fff"
        android:paddingBottom="11.5dp"
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gogetcoupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/qulingquan"
            android:gravity="center"
            android:text="去领券"
            android:textColor="@color/tabColor_nomal" />

        <TextView
            android:id="@+id/beusable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/keshiyong"
            android:gravity="center"
            android:text="可使用"
            android:textColor="@color/tabColor_nomal" />

        <TextView
            android:id="@+id/used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/yishiyong"
            android:gravity="center"
            android:text="已使用"
            android:textColor="@color/tabColor_nomal" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>