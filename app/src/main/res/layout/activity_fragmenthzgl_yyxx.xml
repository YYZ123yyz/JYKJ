<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pBackColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/groabColor">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/arrow_left" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用药信息"
            android:textColor="@color/writeColor"
            android:textSize="10pt" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/writeColor"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_blood_day_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日均"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/groabColor"
                android:gravity="center"/>
            <!-- <LinearLayout
                 android:id="@+id/view_blood_day_average"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_marginTop="10dp"
                 android:orientation="horizontal"
                 android:visibility="gone"
                 android:background="@color/groabColor"/>-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_blood_week_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/day_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周均"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/tabColor_nomal"
                android:gravity="center"/>
            <!--<LinearLayout
                android:id="@+id/view_blood_week_average"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:orientation="horizontal"
                android:background="@color/groabColor"/>-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_blood_month_average"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/day_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="月均"
                android:textColor="@color/tabColor_nomal"
                android:textSize="13sp" />

            <!-- <LinearLayout
                 android:id="@+id/view_blood_month_average"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_marginTop="10dp"
                 android:orientation="horizontal"
                 android:background="@color/groabColor"
                 android:visibility="gone" />-->
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#ffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/img_gson"
        android:background="#ffff"
       android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="自定义时间"
            android:textColor=" #799DFE "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView

            android:layout_gravity="center"
            android:src="@mipmap/bloo"
            android:layout_width="30dp"
            android:layout_height="10dp"/>
    </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lin_date"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <LinearLayout
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        >

        <RelativeLayout
            android:id="@+id/rl_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_box_gray"
            android:orientation="horizontal">

            <TextView
                android:textSize="13sp"
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择开始时间"
                android:layout_centerInParent="true"
                android:padding="5dp"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/tv_start_time"
                android:src="@mipmap/arrow"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至"
            android:layout_marginLeft="10dp"/>

        <RelativeLayout
            android:id="@+id/rl_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_box_gray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="13sp"
                android:layout_centerInParent="true"
                android:text="选择结束时间"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/tv_end_time"
                android:src="@mipmap/arrow"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_comfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_corner_button1"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:text="确定"
            android:textColor="@color/writeColor" />
    </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/writeColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="白晓彤"
            android:textColor="@color/tabColor_nomal"
            android:textSize="8pt" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:id="@+id/item_fragmentHZGL_hzSex"
            android:background="@mipmap/man">

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="30"
                android:textColor="#ffffff"
                android:textSize="6pt" />
        </LinearLayout>



    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_activityFragmentHZGL_YYXX"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>