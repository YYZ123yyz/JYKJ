<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/introduction_layout"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_round_f5f5f5_5">

                <www.jykj.com.jykj_zxyl.util.CircleImageView
                    android:id="@+id/iv_live_user_head"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/docter_heard"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/iv_live_user_head"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:id="@+id/tv_academic_title"
                        android:text="某某某 博士、研究员"
                        >


                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="15sp"
                        android:text="医院预约"
                        android:textColor="@color/color_999999"
                        android:id="@+id/tv_hospital"
                        >


                    </TextView>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:text="立即咨询"
                    android:id="@+id/tv_consult_btn"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:background="@drawable/bg_round_799dfe_13"
                    >


                </TextView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="17dp"
                >
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_round_e69b73_3"
                    >


                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_799def"
                    android:textSize="17sp"
                    android:text="擅长领域"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    >


                </TextView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_round_eaeff5_5"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="23dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:text="你好啊"
                    android:textColor="@color/color_253B55"
                    android:id="@+id/tv_areas_expertise"
                    android:textSize="14sp"
                    >


                </TextView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="17dp"
                >
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_round_e69b73_3"
                    >


                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_799def"
                    android:textSize="17sp"
                    android:text="直播大纲"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    >


                </TextView>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_round_fcf2fe_5"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="26dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="17dp"
                    >

                    <TextView
                        android:id="@+id/tv_live_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01.直播主题"
                        android:textColor="@color/color_253B55"
                        android:textSize="14sp">


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02.直播类目"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tv_live_category"
                        android:textColor="@color/color_253B55"
                        android:textSize="14sp"
                        >


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03.危险因素"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tv_risk_factor"
                        android:textColor="@color/color_253B55"
                        android:textSize="14sp"
                        >


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04.直播关键字"
                        android:layout_marginTop="8dp"
                        android:id="@+id/tv_live_keywords"
                        android:textColor="@color/color_253B55"
                        android:textSize="14sp"
                        >


                    </TextView>
                </LinearLayout>



            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="11dp"
                android:id="@+id/rv_live_protrom_list"
                >


            </android.support.v7.widget.RecyclerView>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:id="@+id/rv_live_picture_list"
                >


            </android.support.v7.widget.RecyclerView>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</LinearLayout>