<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeeeee"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_live_progrom_top">

        <include
            android:id="@+id/title_bar"
            layout="@layout/item_toolbar_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

        </include>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="27dp"
        android:id="@+id/rl_live_progrom"
        android:background="@drawable/bg_round_ffffff_5"

        >


        <ImageView
            android:id="@+id/iv_live_progrom_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="33dp"
            android:src="@mipmap/bg_live_progrom_pic">


        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/iv_live_progrom_pic"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_live_progrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="直播大纲"
                    android:textColor="@color/color_333333"
                    android:textSize="17sp">


                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="33dp"
                    android:src="@mipmap/bg_live_more">

                </ImageView>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="直播内容、预告的概括"
                android:textColor="@color/color_333333"
                android:textSize="15sp">


            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="描述"
                android:textColor="@color/color_333333"
                android:textSize="15sp">


            </TextView>
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="27dp"
        android:id="@+id/rl_add_pic"
        android:background="@drawable/bg_round_ffffff_5"

        >


        <ImageView
            android:id="@+id/iv_live_add_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="33dp"
            android:src="@mipmap/bg_live_add_pic">


        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/iv_live_add_pic"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="添加图片"
                    android:textColor="@color/color_333333"
                    android:textSize="17sp">


                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="33dp"
                    android:src="@mipmap/bg_live_more">

                </ImageView>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="医生选择您所需要的有"
                android:textColor="@color/color_333333"
                android:textSize="15sp">


            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="关直播内容的图片"
                android:textColor="@color/color_333333"
                android:textSize="15sp">


            </TextView>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>