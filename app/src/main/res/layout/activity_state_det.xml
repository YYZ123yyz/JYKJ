<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/item_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="血压分类"
            android:textColor="@color/color_000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/classify_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/color_f5f5f5"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/msg_def"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="危险因素"
            android:textColor="@color/color_000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/factors_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/color_f5f5f5"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/msg_def"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="靶器官损害"
            android:textColor="@color/color_000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/organ_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/color_f5f5f5"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/msg_def"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="临床合并症"
            android:textColor="@color/color_000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/disease_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/color_f5f5f5"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/msg_def"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/look_im"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_round_799dfe_4"
        android:gravity="center"
        android:text="查看分级标准图"
        android:textColor="@color/white"
        android:textSize="16sp" />


</RelativeLayout>