<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_80000000"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_round_ffffff_7"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_000000"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="温馨提示"
            android:id="@+id/tv_title"
            android:layout_marginBottom="48dp"
            >


        </TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:id="@+id/tv_content_msg"
            android:layout_below="@+id/tv_title"
            android:text=""

            >


        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_EEEEEE">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_799def"
                android:textSize="15sp"
                android:text="我知道了"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:id="@+id/tv_iknow_btn"
                >


            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64.5dp"
                android:orientation="horizontal"
                >



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="64.5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/color_999999"
                    android:textSize="15sp"
                    android:text="取消"
                    android:id="@+id/tv_cancel_btn"
                    >

                </TextView>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="64.5dp"
                    android:background="@color/color_EEEEEE"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="64.5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="确定"
                    android:textColor="@color/color_799dfe"
                    android:id="@+id/tv_confirm_btn"
                    >


                </TextView>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>