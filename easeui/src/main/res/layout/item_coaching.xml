<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_clickLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pBackColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_frequency"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/writeColor"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_name"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:textColor="#000000" />

        <EditText
            android:maxLength="5"
            android:inputType="number"
            android:gravity="center"
            android:id="@+id/ed_price"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_27"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_lrbs_zsedit"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="元," />
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/time"
            android:text="分钟数，"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/frequency"
            android:text="频次"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/fragmentmyself_jt_r" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#F0F0F0  " />

</LinearLayout>