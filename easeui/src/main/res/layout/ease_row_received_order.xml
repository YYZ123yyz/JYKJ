                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-3dp"
                        android:background="@mipmap/bg_card_title"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:text="签约订单"
                        android:textColor="@color/writeColor"
                        android:textSize="13sp">


                    </TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18.5dp"
                        android:layout_marginTop="8.5dp"
                        android:layout_marginEnd="18.5dp"
                        android:id="@+id/rl_monitor_type"
                        >

                        <TextView
                            android:id="@+id/tv_monitor_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="监测类型"
                            android:textColor="@color/color_616266"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_monitor_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/color_303133"
                            android:textSize="13sp"
                            android:layout_alignParentRight="true">


                        </TextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18.5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="18.5dp"
                        android:id="@+id/rl_monitor_rate"
                        >

                        <TextView
                            android:id="@+id/tv_coach_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="监测频次"
                            android:textColor="@color/color_616266"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_coach_rate_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/color_303133"
                            android:textSize="13sp"
                            android:layout_alignParentRight="true">


                        </TextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18.5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="18.5dp"
                        android:id="@+id/rl_sign_time"
