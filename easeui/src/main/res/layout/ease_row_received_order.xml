                            android:layout_height="wrap_content"
                            android:text="取消时间"
                            android:textColor="@color/color_616266"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_cancel_appoint_time_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="2020-08-07"
                            android:textColor="@color/color_303133"
                            android:textSize="13sp"
                            android:layout_alignParentRight="true">


                        </TextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginStart="18.5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="18.5dp"
                        android:id="@+id/rl_appoint_project"
