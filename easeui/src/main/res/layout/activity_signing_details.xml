<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="无数据"
        android:textColor="#6666"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/groabColor">

                <LinearLayout
                    android:id="@+id/iv_back_left"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/arrow_left" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="签约详情"
                    android:textColor="@color/writeColor"
                    android:textSize="10pt" />
            </RelativeLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/wzxx_sc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="#eeeeee"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="患者资料"
                            android:textColor="@color/tabColor_nomal"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background=" #F0F0F0 " />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@color/writeColor"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="患者姓名"
                            android:textColor="@color/tabColor_nomal"
                            />

                        <TextView
                            android:id="@+id/patient_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text=""
                            android:textColor="#666666"
                           />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background=" #F0F0F0 " />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@color/writeColor"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="患者年龄"
                            android:textColor="@color/tabColor_nomal"
                            />

                        <TextView
                            android:id="@+id/patient_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text=""
                            android:textColor="#666666"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background=" #F0F0F0 " />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="@color/writeColor"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="患者性别"
                            android:textColor="@color/tabColor_nomal"
                             />

                        <TextView
                            android:id="@+id/patient_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text=""
                            android:textColor="#666666"
                           />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background=" #F0F0F0 " />

                    <LinearLayout
                        android:id="@+id/lin_Detect"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="#eeeeee"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="检测类型"
                            android:textColor="@color/tabColor_nomal"
                           />

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/fragmentmyself_jt_r" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background=" #F0F0F0 " />
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lin_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="#eeeeee"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="频率时长"
                            android:textColor="@color/tabColor_nomal"
                            />
                        <TextView
                            android:id="@+id/day_tv"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/fragmentmyself_jt_r" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background=" #F0F0F0 " />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvqbzz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10" />


                    <LinearLayout
                        android:id="@+id/lin_class"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="#eeeeee"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="辅导类别"
                            android:textColor="@color/tabColor_nomal"
                             />

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/fragmentmyself_jt_r" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#F0F0F0  " />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                      />

                    <LinearLayout
                        android:id="@+id/lin_start_time_s"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="#eeeeee"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="签约开始时间"
                            android:textColor="@color/tabColor_nomal"
                            />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/fragmentmyself_jt_r" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#F0F0F0  " />

                    <LinearLayout
                        android:id="@+id/lin_duration"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="#eeeeee"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="签约时长"
                            android:textColor="@color/tabColor_nomal"
                            />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_15"
                            android:src="@mipmap/fragmentmyself_jt_r" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="#F0F0F0  " />
                    <LinearLayout
                        android:id="@+id/lin_Signingtime_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:background="#eeeeee"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:text="合计金额"
                            android:textColor="@color/tabColor_nomal"
                            />

                        <TextView
                            android:visibility="visible"
                            android:id="@+id/tv_prices"
                            android:layout_gravity="center_vertical"
                           android:text="￥"
                            android:textColor="#FA4A4A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginRight="@dimen/dp_10"
                            android:id="@+id/Totalprice"
                            android:layout_gravity="center_vertical"
                            android:text=""
                            android:textColor="#FA4A4A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="13.5dp"
                        android:layout_height="13.5dp"
                        android:id="@+id/iv_activityLogin_agreeImg"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/choice"/>
                    <TextView
                        android:text="点击即代表您已同意"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="《鹫一健康医生与平台签约协议》 "
                        android:textSize="13sp"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_yszc"
                        android:textColor="@color/groabColor"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <Button
                    android:layout_marginBottom="@dimen/dp_25"
                    android:id="@+id/bt_activityMySelfSetting_exitButton"
                    android:layout_width="@dimen/dp_232"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="@dimen/dp_60"
                    android:layout_marginRight="40dp"
                    android:background="@mipmap/activity_mysurplus_qx"
                    android:text="提交"
                    android:textColor="@color/writeColor"
                    android:textSize="8pt" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>