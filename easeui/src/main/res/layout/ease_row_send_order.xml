                        android:layout_marginEnd="18.5dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_patient_type_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="患者类型"
                            android:textColor="@color/color_616266"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_patient_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="一次性就诊"
                            android:textColor="@color/color_303133"
                            android:textSize="13sp">

                        </TextView>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_price_vlaue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="11dp"
                        android:layout_marginEnd="18.5dp"
                        android:layout_marginRight="18.5dp"
