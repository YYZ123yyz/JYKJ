                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18.5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="18.5dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_patient_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="患者"
                            android:textColor="@color/color_616266"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_patient_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="张三"
                            android:textColor="@color/color_303133"
                            android:textSize="13sp">


                        </TextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_medical_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18.5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="18.5dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_medical_end_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="就诊结束时间"
                            android:textColor="@color/color_616266"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_medical_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="2020-8-17"
                            android:textColor="@color/color_303133"
                            android:textSize="13sp">


                        </TextView>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_medical_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18.5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="18.5dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_medical_doctor_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="就诊医生"
                            android:textColor="@color/color_616266"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_medical_doctor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="李医生"
                            android:textColor="@color/color_303133"
                            android:textSize="13sp">

                        </TextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_patient_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
