                            android:textColor="@color/color_616266"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_receive_doctor_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/color_303133"
                            android:textSize="13sp">


                        </TextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_surplus_times"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18.5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="18.5dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_surplus_times"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余次数"
                            android:textColor="@color/color_616266"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_surplus_times_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/color_303133"
                            android:textSize="13sp">


                        </TextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_surplus_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18.5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="18.5dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_surplus_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余时长"
                            android:textColor="@color/color_616266"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_surplus_duration_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/color_303133"
                            android:textSize="13sp">


                        </TextView>
                    </RelativeLayout>

                    <RelativeLayout
